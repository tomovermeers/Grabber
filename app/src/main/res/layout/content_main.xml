<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.application.grabber.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/tv_parse_json"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@android:color/background_light"
        android:padding="5dp"
        android:text="@string/tv_parse_json_str"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_parse_json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_parse_json"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:padding="5dp"
        android:text="@string/btn_parse_json_str"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_parse_xml"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_parse_json"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@android:color/background_light"
        android:padding="5dp"
        android:text="@string/tv_parse_xml_str"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_parse_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_parse_xml"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:padding="5dp"
        android:text="@string/btn_parse_xml_str"
        android:textStyle="bold" />


</RelativeLayout>
